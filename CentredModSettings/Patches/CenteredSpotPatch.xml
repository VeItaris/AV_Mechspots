<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<!-- Mech work station -->
	<Operation Class="AV_Mechspots.PatchOperation_ModSettings_CenteredSpots">
		<match Class="PatchOperationConditional">
			<xpath>/Defs/ThingDef[defName="AV_Mechworkstation"]/graphicData/texPath</xpath>
			<match Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="AV_Mechworkstation"]/graphicData/texPath</xpath>
				<value>
					<texPath>Things/Building/CenteredMechSockets/AV_MechWorkSocket</texPath>
				</value>	
			</match>
		</match>
	</Operation>
	
	<Operation Class="AV_Mechspots.PatchOperation_ModSettings_CenteredSpots">
		<match Class="PatchOperationConditional">
