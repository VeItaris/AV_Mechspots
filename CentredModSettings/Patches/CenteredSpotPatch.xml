			<match Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="AV_Mechworkstation"]/graphicData/drawOffset</xpath>
				<value>
					<drawOffset>(0,0,0.1)</drawOffset>
				</value>	
			</match>
		</match>
	</Operation>
		

